function kcd {
  entries=$(kubectx)
  current=$(kubectx -c)
  while IFS= read -r entry; do
    if [[ $entry != "crc-"* ]] && [[ $entry != $current ]]; then
      kubectx -d "$entry"
    fi
  done <<< "$entries"
}

repos() {

function mfa {
  local service=""
  if [ $# -eq 1 ]; then
    service="$1"
  fi
  otp=$(ykman oath accounts code --single "${service}")
  [ -n "${otp}" ] || return 1
  echo -n "${otp}" | pbcopy;
  echo "OTP copied to clipboard"
}

